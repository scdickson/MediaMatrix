<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/white_noise">

    <LinearLayout
        android:orientation="vertical"
        android:layout_margin="5dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_gravity="center_horizontal"
            android:id="@+id/cast_help"
            android:textStyle="bold"
            android:textSize="20dp"
            android:textAlignment="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <Button
            android:layout_margin="5dp"
            android:id="@+id/action_cast"
            android:padding="10dp"
            android:textColor="#fff"
            android:textStyle="bold"
            android:textSize="25sp"
            android:background="@drawable/green_button"
            android:text="Cast Image"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>


    <RelativeLayout
        android:id="@+id/photoPreviewRelativeLayout"
        android:layout_centerInParent="true"
        android:background="@drawable/rounded_rectangle_transparent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/preview"
            android:layout_marginBottom="5dp"
            android:layout_centerHorizontal="true"
            android:layout_width="400dp"
            android:layout_height="400dp"
            android:src="@drawable/placeholder"/>
    </RelativeLayout>
</RelativeLayout>